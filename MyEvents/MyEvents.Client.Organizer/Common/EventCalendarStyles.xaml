    <DataTemplate x:Key="CalendarHeaderTemplate">
        <Grid Width="240" Height="40">
            <TextBlock Text="{Binding}" Style="{StaticResource CalendarHoursHeader}" Margin="5,0,0,0"></TextBlock>          
        </Grid>
    </DataTemplate>
    
